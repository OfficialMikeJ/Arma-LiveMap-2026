{
  "name": "arma-reforger-tactical-map",
  "version": "1.0.0",
  "description": "Arma Reforger Tactical Map - Real-time coordination for desktop",
  "main": "dist/electron/main.js",
  "scripts": {
    "start": "concurrently \"npm run dev:react\" \"wait-on http://localhost:3000 && npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "tsc -p tsconfig.electron.json && electron .",
    "build": "tsc && vite build && tsc -p tsconfig.electron.json",
    "build:win": "npm run build && electron-builder --win",
    "build:linux": "npm run build && electron-builder --linux",
    "build:mac": "npm run build && electron-builder --mac",
    "package": "npm run build && electron-builder"
  },
  "keywords": [
    "arma",
    "reforger",
    "tactical",
    "map",
    "electron"
  ],
  "author": "Tactical Map Team",
  "license": "MIT",
  "build": {
    "appId": "com.armareforger.tacticalmap",
    "productName": "ArmaReforgerMap",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Game"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.games"
    }
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "crypto-js": "^4.2.0",
    "electron-store": "^8.1.0",
    "qrcode": "^1.5.3",
    "speakeasy": "^2.0.0",
    "ws": "^8.16.0",
    "axios": "^1.6.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/crypto-js": "^4.2.1",
    "@types/node": "^20.11.0",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/speakeasy": "^2.0.10",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.1.4",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.33",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "wait-on": "^7.2.0"
  }
}
